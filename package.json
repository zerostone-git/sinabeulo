  "author": {
    "name": "Yeongseok Yoon",
    "email": "zerostone@live.com"
  },
  "license": "UNLICENSED",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/sinabeulo-utils",
      "packages/sinabeulo-styles",
      "packages/sinabeulo-react",
      "packages/sinabeulo-react-docs",
      "packages/sinabeulo-vue",
      "packages/sinabeulo-vue-docs",
      "packages/sinabeulo-svelte"
    ],
    "nohoist": [
      "**/@types/react",
      "**/@types/react-dom",
      "**/@types/react-router",
      "**/@types/react-router-dom",
      "**/@mdx-js/loader",
      "**/@mdx-js/mdx",
      "**/@mdx-js/react",
      "**/@mdx-js/util",
      "**/@vue",
      "**/react",
      "**/react-dom",
      "**/react-is",
      "**/react-router",
      "**/react-router-dom",
      "**/vue",
      "**/vue-eslint-parser",
      "**/vue-router",
      "**/svelte",
      "**/svelte-dev-helper"
    ]
  },
  "scripts": {
    "serve-react": "yarn workspace @sinabeulo/react-docs serve",
    "serve-vue": "yarn workspace @sinabeulo/vue-docs serve",
    "preview-styles": "yarn workspace @sinabeulo/styles serve",
    "preview-react": "yarn workspace @sinabeulo/react serve",
    "preview-vue": "yarn workspace @sinabeulo/vue serve",
    "preview-svelte": "yarn workspace @sinabeulo/svelte serve",
    "test": "yarn workspaces run test",
    "prebuild": "tsc --build --clean",
    "build": "yarn workspaces run build"
  }
}
