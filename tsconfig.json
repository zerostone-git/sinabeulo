{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@sinabeulo/*": ["packages/*/src/index.ts"]
    }
  },
  "references": [
    {
      "path": "packages/sinabeulo-react"
    },
    {
      "path": "packages/sinabeulo-styles"
    },
    {
      "path": "packages/sinabeulo-utils"
    },
    {
      "path": "packages/sinabeulo-vue"
    },
    {
      "path": "packages/sinabeulo-svelte"
    }
  ]
}
